class Casting {
    long x = Long.MAX_VALUE;
    long y = 1234567L;
    int z;
    
    // z 변수에 x, y 변수에 선언되어있는 데이터를 안전하게 할당할수 있도록
}


//double로 형변환 후 해결
package com.example.javatest;

class Casting {
     static long x = Long.MAX_VALUE;
     static long y = 1234567L;
     static int z;

   static double x1 = x;
   static double y1 = y;
   static double z1 = z;

    public static void main(String[] args) {
        z1 = (x1 + y1);
        System.out.println(z1);
        
    }
    
    // z 변수에 x, y 변수에 선언되어있는 데이터를 안전하게 할당할수 있도록
}



조건문, 형변환 이용하여 다시 만들기
x나 y 값이  z로 온전히 들어가게
// static 없이 

package com.example.javatest;

class Casting {
      long x = Long.MAX_VALUE;
      long y = 1234567L;
      int z;

    double x1 = x;
    double y1 = y;
    double z1 = z;

    public static void main(String[] args) {
        Casting c = new Casting();
        c.z1 = (c.x1 + c.y1);
        System.out.println(c.z1);

    }

    // z 변수에 x, y 변수에 선언되어있는 데이터를 안전하게 할당할수 있도록
}



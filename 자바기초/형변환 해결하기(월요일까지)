class Casting {
    long x = Long.MAX_VALUE;
    long y = 1234567L;
    int z;
    
    // z 변수에 x, y 변수에 선언되어있는 데이터를 안전하게 할당할수 있도록
}


//double로 형변환 후 해결
package com.example.javatest;

class Casting {
     static long x = Long.MAX_VALUE;
     static long y = 1234567L;
     static int z;

   static double x1 = x;
   static double y1 = y;
   static double z1 = z;

    public static void main(String[] args) {
        z1 = (x1 + y1);
        System.out.println(z1);
        
    }
    
    // z 변수에 x, y 변수에 선언되어있는 데이터를 안전하게 할당할수 있도록
}
